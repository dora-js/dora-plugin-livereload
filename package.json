{
  "name": "dora-plugin-livereload",
  "version": "0.2.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/dora-js/dora-plugin-livereload"
  },
  "homepage": "https://github.com/dora-js/dora-plugin-livereload",
  "author": "pigcan <jiangjay818@gmail.com>",
  "license": "MIT",
  "main": "./lib",
  "scripts": {
    "build": "rm -rf lib && babel src --out-dir lib",
    "test": "babel-node node_modules/.bin/babel-istanbul cover node_modules/.bin/_mocha --no-timeouts",
    "lint": "eslint --ext .js src",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "internal-ip": "~1.2.0",
    "lodash.isequal": "~3.0.4",
    "tiny-lr": "~0.2.1"
  },
  "devDependencies": {
    "atool-build": "0.6.x",
    "babel-cli": "~6.2.0",
    "babel-core": "~6.1.21",
    "babel-istanbul": "^0.5.9",
    "babel-plugin-add-module-exports": "~0.1.1",
    "babel-preset-es2015": "~6.1.18",
    "babel-preset-stage-0": "~6.1.18",
    "coveralls": "^2.11.6",
    "dora": "0.3.x",
    "dora-plugin-webpack": "0.5.x",
    "eslint": "~1.9.0",
    "eslint-config-airbnb": "~1.0.0",
    "fs-extra": "^0.26.3",
    "mocha": "~2.3.4",
    "pre-commit": "~1.1.2",
    "supertest": "^1.1.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "files": [
    "lib",
    "package.json",
    "README.md"
  ]
}
